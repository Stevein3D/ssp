<!DOCTYPE html>
	<head>
		<TITLE>Shuttershock Productions</TITLE>
		<%= favicon_link_tag 'favicon.ico' %>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>

		<!-- <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/normalize.css"> -->

		<!-- <script src="js/jquery-1.9.1.min.js"></script> -->



	</head>
	<body>

		<style type="text/css">
			@font-face {font-family: "Neutrabold"; src: url("<%= asset_path('neutrasc.otf') %>") format("truetype");}
		</style>

		<header class='header' role='banner'>
			
			<nav role='navigation' class='top-navigation'>
				
				<ul class='nav'>
					<li><a href="work.html" >work</a></li>
					<li><a href="facilities.html" >facilities</a></li>
					<li><a href="index.html" class='logo'><%= image_tag "logo_text_color.png", {:alt => 'Shuttershock Productions', :title => 'Shuttershock Productions'}%></a></li>
					<li><a href="clients.html" >clients</a></li>
					<li><a href="contact.html" >contact</a></li>
				</ul>
				
			</nav>
			
		</header>
		
		<div class='featured-video'>
			<div class='video-box'>
				<iframe name= "video-player" src="http://player.vimeo.com/video/<%= @videos.first["id"] %>" 
					width="800" height="450" frameborder="0" 
					webkitallowfullscreen mozallowfullscreen allowfullscreen>
				</iframe>
			</div>
		</div>

		<div class='album-collection group'>

			<div id='work-albums'>
				<div class='albums nav'>
					<%= image_tag 'logo_tiny.png'%>
					<a href="work.html"><h2>recent</h2></a>
					<a href="work_arts"><h2>arts</h2></a>
					<a href="work_corporate"><h2>corporate</h2></a>
					<a href="work_live"><h2>live</h2></a>
					<%= image_tag 'logo_tiny.png'%>
				</div>
			</div>


			<div class='vid-row'>
				<% @videos.each do |clip| %>
					<div class='video-select'>
						<div class='album-video'>
							<%= image_tag clip["thumbnail_large"], {:class => 'thumbnail', :id => clip["id"] }%>
							<h1><%= clip["title"] %></h1>
						</div>
						<!--<%= link_to clip["description"], :class => 'album-info', :id => clip["id"] %>-->
						<div class='album-info' id="<%= clip["id"]%>"><p><%= clip["description"]%></p></div>
						<!-- <a href="#" class='album-info' id="<%= clip["id"]%>" ><p><%= clip["description"]%></p></a> -->
					</div>
				<% end %>
			</div>

		</div>

		<script type="text/javascript">
				$('html, body').delay(1200).animate({scrollTop: $(document).height()-$(window).height()}, 800, "swing");
				$('.album-info').click(function(){
					var $url = $(this).attr('id');
					$('iframe').attr('src',"http://player.vimeo.com/video/" + $url + "?autoplay=1");
					$("html, body").delay(800).animate({ scrollTop: 0 }, "slow");
				});
				
		</script>

		</div>

		<nav role='navigation' class='bottom-navigation'>
			<a href="index.html"><%= image_tag 'logo_icon.jpg', {:alt => 'Shuttershock Productions', :title => 'Shuttershock Productions'}%></a>
			<div class='social nav'>
				<a href="https://www.facebook.com/ShutterShockProductions" target='_blank'>facebook</a>
				<a href="https://twitter.com/ShutterShockVid" target='_blank'>twitter</a>
				<a href="http://vimeo.com/kevw85" target='_blank'>vimeo</a>
				<a href="https://youtube.com" target='_blank'>youtube</a>
			</div>
			<p class='copyright'>
				&copy; 2013 shuttershock productions
			</p>
		</nav>
		
	</body>
</html>